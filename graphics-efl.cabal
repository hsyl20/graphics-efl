name:                graphics-efl
version:             0.1.0.0
synopsis:            Bindings to EFL (Enlightenment Foundation Libraries)
-- description:         
license:             BSD3
license-file:        LICENSE
author:              Sylvain HENRY
maintainer:          hsyl20@gmail.com
-- copyright:           
category:            Graphics
build-type:          Simple
cabal-version:       >=1.8

library
  exposed-modules:
      Graphics.Efl.Ecore,
      Graphics.Efl.Helpers,
      Graphics.Efl.EcoreEvas,
      Graphics.Efl.Evas,
      Graphics.Efl.Evas.Types,
      Graphics.Efl.Evas.BasicObject,
      Graphics.Efl.Evas.Image,
      Graphics.Efl.Evas.Rectangle,
      Graphics.Efl.Evas.Events,
      Graphics.Efl.Eina

  PkgConfig-Depends:
    eina,
    evas,
    ecore

  extra-libraries:
    eina
    ecore
    ecore_evas
    evas

  build-depends:       base ==4.6.*, vector ==0.10.*
  hs-source-dirs:      src
  build-tools:         c2hs
  ghc-options: -Wall

Test-Suite test-evas
  type:           exitcode-stdio-1.0
  main-is:        test-evas.hs
  hs-source-dirs: tests
  build-depends:  base, graphics-efl

executable ImageViewer
  main-is: ImageViewer.hs
  build-depends: 
    base,
    graphics-efl,
    vector
  hs-source-dirs: examples
  ghc-options: -Wall
